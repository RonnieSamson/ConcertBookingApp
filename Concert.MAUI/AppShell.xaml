<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Concert.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Concert.MAUI.Views"
    Title="Concert Booking App"
    Shell.FlyoutBehavior="Disabled">

    <!-- Login page - always visible when not authenticated -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login" />

    <!-- Main app navigation - only visible when authenticated -->
    <TabBar x:Name="MainTabBar" IsVisible="False">
        <ShellContent
            Title="Home"
            Icon="home"
            ContentTemplate="{DataTemplate views:Homepage}"
            Route="home" />
            
        <ShellContent
            Title="My Bookings"
            Icon="calendar"
            ContentTemplate="{DataTemplate views:MyBookingsPage}"
            Route="bookings" />
    </TabBar>

    <!-- Hidden pages accessible only after login -->
    <ShellContent
        Title="Performance Details"
        ContentTemplate="{DataTemplate views:PerformanceDetailsPage}" 
        Route="performance"
        IsVisible="False"/>

    <ShellContent
        Title="Book Performance"
        ContentTemplate="{DataTemplate views:BookingPage}" 
        Route="booking"
        IsVisible="False"/>

</Shell>