<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Concert.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Concert.MAUI.Views"
    Title="Concert.MAUI"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:Homepage}"
        Route="Homepage" />

    <ShellContent
        Title="Performances"  
        ContentTemplate="{DataTemplate views:PerformanceDetailsPage}" 
        Route="PerformanceDetailsPage"/>

    <ShellContent
        Title="Booking"  
        ContentTemplate="{DataTemplate views:BookingPage}" 
        Route="BookingPage"/>

</Shell>