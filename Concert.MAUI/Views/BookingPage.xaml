<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Concert.MAUI.Views.BookingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Concert.MAUI.ViewModels"
    xmlns:models="clr-namespace:Concert.MAUI.Models"
    x:DataType="vm:BookingPageViewModel"
    x:Name="Page"
    Title="Booking"
    BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label
                FontSize="24"
                HorizontalOptions="Center"
                Text="Create Booking"
                TextColor="Black" />

            <Label
                FontAttributes="Bold"
                FontSize="16"
                Text="Customer Information:" />

            <Entry
                Placeholder="Enter customer name"
                Text="{Binding CustomerName}" />

            <Entry
                Placeholder="Enter customer email"
                Text="{Binding CustomerEmail}" />

            <Label
                FontAttributes="Bold"
                FontSize="16"
                Text="Select Performance:" />

            <CollectionView 
                ItemsSource="{Binding Performances}"
                SelectedItem="{Binding SelectedPerformance}"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Performance">
                        <Border
                            Margin="5"
                            Padding="10"
                            BackgroundColor="LightBlue"
                            Stroke="DarkBlue"
                            StrokeThickness="2">
                            <VerticalStackLayout>
                                <Label 
                                    FontAttributes="Bold"
                                    FontSize="14" 
                                    Text="{Binding Location}" />
                                <Label 
                                    FontSize="12" 
                                    Text="{Binding StartTime, StringFormat='Start: {0:HH:mm dd/MM/yyyy}'}" />
                                <Label 
                                    FontSize="12" 
                                    Text="{Binding EndTime, StringFormat='End: {0:HH:mm dd/MM/yyyy}'}" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <HorizontalStackLayout Margin="10" Spacing="20">
                <Button
                    Padding="10"
                    BackgroundColor="Green"
                    Command="{Binding ConfirmBookingCommand}"
                    Text="Confirm Booking"
                    TextColor="White" />

                <Button
                    Padding="10"
                    BackgroundColor="Red"
                    Command="{Binding CancelBookingCommand}"
                    Text="Cancel"
                    TextColor="White" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>