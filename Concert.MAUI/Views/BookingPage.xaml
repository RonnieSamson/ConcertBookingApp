<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Concert.MAUI.Views.BookingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Concert.MAUI.ViewModels"
    xmlns:models="clr-namespace:Concert.MAUI.Models"
    x:DataType="vm:BookingPageViewModel"
    x:Name="Page"
    Title="Booking"
    BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label
                FontSize="24"
                HorizontalOptions="Center"
                Text="Create Booking"
                TextColor="Black" />

            <Label
                FontAttributes="Bold"
                FontSize="16"
                TextColor="Black"
                Text="Customer Information:" />

            <Label
                Text="Name:"
                FontSize="14"
                TextColor="Gray"
                Margin="0,5,0,0" />
            <Entry
                Placeholder="Enter customer name"
                Text="{Binding CustomerName}"
                TextColor="Black"
                PlaceholderColor="Gray" />

            <Label
                Text="Email:"
                FontSize="14"
                TextColor="Gray"
                Margin="0,10,0,0" />
            <Entry
                Placeholder="Enter customer email"
                Text="{Binding CustomerEmail}"
                TextColor="Black"
                PlaceholderColor="Gray" />

            <Label
                FontAttributes="Bold"
                FontSize="16"
                TextColor="Black"
                Text="Selected Performance:" />
                
            <Label 
                Text="Review and confirm your booking below."
                FontSize="12"
                TextColor="Gray"
                Margin="0,5,0,10" />

            <!-- Show selected performances as information cards (non-selectable) -->
            <CollectionView 
                ItemsSource="{Binding Performances}"
                SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Performance">
                        <Border
                            Margin="5"
                            Padding="15"
                            BackgroundColor="LightGreen"
                            Stroke="Green"
                            StrokeThickness="2">
                            
                            <HorizontalStackLayout Spacing="15">
                                <!-- Checkmark to show this is selected -->
                                <Label Text="âœ“" 
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="Green"
                                       VerticalOptions="Center"/>
                                
                                <!-- Performance Info -->
                                <VerticalStackLayout>
                                    <Label 
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        TextColor="Black"
                                        Text="{Binding Location}" />
                                    <Label 
                                        FontSize="12"
                                        TextColor="Black"
                                        Text="{Binding StartTime, StringFormat='Start: {0:HH:mm dd/MM/yyyy}'}" />
                                    <Label 
                                        FontSize="12"
                                        TextColor="Black"
                                        Text="{Binding EndTime, StringFormat='End: {0:HH:mm dd/MM/yyyy}'}" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <HorizontalStackLayout Margin="10" Spacing="20">
                <Button
                    Padding="10"
                    BackgroundColor="Green"
                    Command="{Binding ConfirmBookingCommand}"
                    Text="Confirm Booking"
                    TextColor="White" />

                <Button
                    Padding="10"
                    BackgroundColor="Red"
                    Command="{Binding CancelBookingCommand}"
                    Text="Cancel"
                    TextColor="White" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>