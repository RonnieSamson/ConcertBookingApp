<ContentPage
    x:Class="Concert.MAUI.Views.BookingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Booking">

    <VerticalStackLayout Padding="20">
        <Label Text="Booking Page"
               FontSize="24"
               TextColor="Black"
               HorizontalOptions="Center" />

        <!-- Displays user ID, concert ID, and the comma-separated performance IDs -->
        <Label Text="{Binding UserIdQuery}"
               FontSize="16"
               TextColor="Red" />

        <Label Text="{Binding ConcertIdQuery}"
               FontSize="16"
               TextColor="Blue" />

        <Label Text="{Binding PerformanceIdsQuery}"
               FontSize="16"
               TextColor="Green" />
    </VerticalStackLayout>
</ContentPage>