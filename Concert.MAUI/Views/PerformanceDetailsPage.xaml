<ContentPage
    x:Class="Concert.MAUI.Views.PerformanceDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Page"
    Title="Performances">

    <VerticalStackLayout Padding="20">
        

        <CollectionView ItemsSource="{Binding Performances}"
                        SelectionMode="Multiple"
                        SelectedItems="{Binding SelectedPerformances, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5"
                            Padding="10"
                            BackgroundColor="White"
                            Stroke="Gray"
                            StrokeThickness="2">
                        <VerticalStackLayout>
                            <Label FontSize="12" Text="{Binding Id}" />
                            <Label FontSize="12" Text="{Binding StartTime, StringFormat='Start: {0:HH:mm dd/MM/yyyy}'}" />
                            <Label FontSize="12" Text="{Binding EndTime, StringFormat='End: {0:HH:mm dd/MM/yyyy}'}" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Book Selected Performances"
                Command="{Binding BookSelectedPerformancesCommand}"
                Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>