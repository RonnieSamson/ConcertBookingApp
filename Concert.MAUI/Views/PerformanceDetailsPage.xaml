<ContentPage
    x:Class="Concert.MAUI.Views.PerformanceDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Concert.MAUI.ViewModels"
    xmlns:models="clr-namespace:Concert.MAUI.Models"
    x:DataType="vm:PerformancePageViewModel"
    x:Name="Page"
    Title="Performances">

    <VerticalStackLayout Padding="20">
        <Label 
            Text="Select performances to book (tap items to select/deselect):"
            FontSize="16"
            FontAttributes="Bold"
            TextColor="DarkBlue"
            Margin="0,0,0,15"
            HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Performances}"
                        SelectionMode="Multiple"
                        SelectedItems="{Binding SelectedPerformances, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Performance">
                    <Border Margin="5"
                            Padding="15"
                            BackgroundColor="White"
                            Stroke="Gray"
                            StrokeThickness="2">
                        
                        <!-- Performance Info with simple layout -->
                        <VerticalStackLayout>
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="â˜" 
                                       FontSize="20"
                                       TextColor="Gray"
                                       VerticalOptions="Center"/>
                                <Label FontAttributes="Bold" 
                                       FontSize="16" 
                                       TextColor="Black"
                                       Text="{Binding Location}"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            
                            <Label FontSize="14" 
                                   TextColor="Black"
                                   Text="{Binding StartTime, StringFormat='Start: {0:HH:mm dd/MM/yyyy}'}"
                                   Margin="30,5,0,0" />
                            <Label FontSize="14" 
                                   TextColor="Black"
                                   Text="{Binding EndTime, StringFormat='End: {0:HH:mm dd/MM/yyyy}'}"
                                   Margin="30,0,0,0" />
                            <Label FontSize="12" 
                                   TextColor="Gray" 
                                   Text="{Binding BookingCount, StringFormat='Bookings: {0}'}"
                                   Margin="30,5,0,0" />
                        </VerticalStackLayout>
                        
                        <!-- Visual State Manager for Selection -->
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="White" />
                                        <Setter Property="Stroke" Value="Gray" />
                                        <Setter Property="StrokeThickness" Value="2" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="LightGreen" />
                                        <Setter Property="Stroke" Value="Green" />
                                        <Setter Property="StrokeThickness" Value="3" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Book Selected Performances"
                Command="{Binding BookSelectedPerformancesCommand}"
                Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>