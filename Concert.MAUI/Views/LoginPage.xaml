<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Concert.MAUI.ViewModels"
             x:DataType="vm:LoginViewModel"
             x:Class="Concert.MAUI.Views.LoginPage"
             BackgroundColor="{StaticResource Primary}"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid Padding="30,50,30,30" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackLayout Grid.Row="0" VerticalOptions="End" Spacing="20">
                <!-- Logo/Icon -->
                <Border BackgroundColor="White" 
                        Stroke="Transparent"
                        StrokeThickness="0"
                        WidthRequest="80" 
                        HeightRequest="80" 
                        HorizontalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40"/>
                    </Border.StrokeShape>
                    <Label Text="ðŸŽµ" 
                           FontSize="40" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"/>
                </Border>

                <!-- Welcome Text -->
                <Label Text="Concert Booking" 
                       FontSize="32" 
                       FontAttributes="Bold"
                       TextColor="White" 
                       HorizontalOptions="Center"/>
                       
                <Label Text="Sign in to your account" 
                       FontSize="16" 
                       TextColor="White" 
                       Opacity="0.8"
                       HorizontalOptions="Center"/>
            </StackLayout>

            <!-- Login Form -->
            <StackLayout Grid.Row="1" Spacing="20" Margin="0,50,0,30">
                
                <!-- Email Input -->
                <Border BackgroundColor="White" 
                        Stroke="Transparent"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <Entry Text="{Binding Email}"
                           Placeholder="Email address"
                           Keyboard="Email"
                           FontSize="16"
                           Margin="20,15"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="Gray"/>
                </Border>

                <!-- Password Input -->
                <Border BackgroundColor="White" 
                        Stroke="Transparent"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <Entry Text="{Binding Password}"
                           Placeholder="Password"
                           IsPassword="True"
                           FontSize="16"
                           Margin="20,15"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="Gray"/>
                </Border>

                <!-- Error Message -->
                <Label Text="{Binding ErrorMessage}"
                       TextColor="#FF6B6B"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       IsVisible="{Binding IsErrorVisible}"
                       Margin="0,10,0,0"/>

                <!-- Login Button -->
                <Button Text="Sign In"
                        BackgroundColor="White"
                        TextColor="{StaticResource Primary}"
                        CornerRadius="25"
                        HeightRequest="50"
                        FontSize="18"
                        FontAttributes="Bold"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                        Margin="0,20,0,0"/>

                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}" 
                                   IsVisible="{Binding IsLoading}"
                                   Color="White"
                                   HeightRequest="30"
                                   Margin="0,10,0,0"/>

                <!-- Demo User Info -->
                <Border BackgroundColor="Transparent" 
                        Stroke="White" 
                        StrokeThickness="1"
                        Margin="0,20,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>
                    <StackLayout Spacing="5" Margin="15">
                        <Label Text="Demo Account:" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               FontSize="14"/>
                        <Label Text="Email: John123@example.com" 
                               TextColor="White" 
                               FontSize="12"/>
                        <Label Text="Password: John123" 
                               TextColor="White" 
                               FontSize="12"/>
                    </StackLayout>
                </Border>
            </StackLayout>

            <!-- Footer -->
            <StackLayout Grid.Row="2" VerticalOptions="End">
                <Label Text="Â© 2025 Concert Booking App" 
                       TextColor="White" 
                       Opacity="0.6"
                       FontSize="12" 
                       HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>