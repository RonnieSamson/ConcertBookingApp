<ContentPage
    x:Class="Concert.MAUI.Views.Homepage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Page"
    Title="Home">

    <VerticalStackLayout Padding="20">
        <Button
            BackgroundColor="Blue"
            Command="{Binding ViewMyBookingsCommand}"
            Text="View My Bookings"
            TextColor="White"
            Margin="0,0,0,20" />

        <CollectionView ItemsSource="{Binding Concerts}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="5"
                        Padding="10"
                        BackgroundColor="White"
                        Stroke="Gray"
                        StrokeThickness="2">
                        <VerticalStackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="{Binding Title}" />
                            <Label FontSize="14" Text="{Binding Description}" />
                            <Button
                                Command="{Binding Source={x:Reference Page}, Path=BindingContext.ShowPerformancesCommand}"
                                CommandParameter="{Binding ConcertId}"
                                Text="Show Performances" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>