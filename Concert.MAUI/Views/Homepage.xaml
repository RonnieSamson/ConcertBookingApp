<ContentPage
    x:Class="Concert.MAUI.Views.Homepage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Concert.MAUI.ViewModels"
    xmlns:models="clr-namespace:Concert.MAUI.Models"
    x:DataType="vm:HomepageViewModel"
    x:Name="Page"
    Title="Concert Booking App">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Command="{Binding LogoutCommand}" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="20">
        <Label 
            FontSize="18" 
            FontAttributes="Bold"
            TextColor="Black"
            Text="{Binding WelcomeMessage}"
            Margin="0,0,0,20" />

        <Button
            BackgroundColor="Blue"
            Command="{Binding ViewMyBookingsCommand}"
            Text="View My Bookings"
            TextColor="White"
            Margin="0,0,0,20" />

        <CollectionView ItemsSource="{Binding Concerts}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Concert">
                    <Border
                        Margin="5"
                        Padding="10"
                        BackgroundColor="White"
                        Stroke="Gray"
                        StrokeThickness="2">
                        <VerticalStackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                TextColor="Black"
                                Text="{Binding Title}" />
                            <Label 
                                FontSize="14" 
                                TextColor="Black"
                                Text="{Binding Description}" />
                            <Label 
                                FontSize="12" 
                                TextColor="Gray"
                                Text="{Binding BookingCount, StringFormat='Bookings: {0}'}" />
                            <Button
                                Command="{Binding Source={x:Reference Page}, Path=BindingContext.ShowPerformancesCommand}"
                                CommandParameter="{Binding ConcertId}"
                                Text="Show Performances" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>