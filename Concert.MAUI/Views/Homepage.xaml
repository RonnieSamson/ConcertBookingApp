<ContentPage
    x:Class="Concert.MAUI.Views.Homepage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Page"
    Title="Home">

    <VerticalStackLayout Padding="20">
        <CollectionView ItemsSource="{Binding Concerts}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="5"
                        Padding="10"
                        BackgroundColor="White"
                        Stroke="Gray"
                        StrokeThickness="2">
                        <VerticalStackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="{Binding Title}" />
                            <Label FontSize="14" Text="{Binding Description}" />
                            <Button
                                Command="{Binding Source={x:Reference Page}, Path=BindingContext.LoadPerformancesCommand}"
                                CommandParameter="{Binding ConcertId}"
                                Text="Show Performances" />
                            <CollectionView IsVisible="{Binding Source={x:Reference Page}, Path=BindingContext.ConcertPerformances[ConcertId].Count, Converter={StaticResource CountToVisibilityConverter}}" ItemsSource="{Binding Source={x:Reference Page}, Path=BindingContext.ConcertPerformances[ConcertId]}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="5"
                                            Padding="5"
                                            BackgroundColor="LightGray"
                                            Stroke="Gray"
                                            StrokeThickness="1">
                                            <HorizontalStackLayout>
                                                <VerticalStackLayout>
                                                    <Label FontSize="12" Text="{Binding StartTime, StringFormat='Start: {0:HH:mm dd/MM/yyyy}'}" />
                                                    <Label FontSize="12" Text="{Binding EndTime, StringFormat='End: {0:HH:mm dd/MM/yyyy}'}" />
                                                </VerticalStackLayout>
                                                <Button
                                                    BackgroundColor="Green"
                                                    Command="{Binding Source={x:Reference Page}, Path=BindingContext.BookPerformanceCommand}"
                                                    CommandParameter="{Binding ConcertId}"
                                                    Text="Book"
                                                    TextColor="White" />
                                            </HorizontalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>