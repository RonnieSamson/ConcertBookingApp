{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch MAUI App (Windows)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/Concert.MAUI/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/Concert.MAUI.exe",
            "args": [],
            "cwd": "${workspaceFolder}/Concert.MAUI",
            "stopAtEntry": false,
            "console": "internalConsole",
            "preLaunchTask": "Build MAUI App",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Run MAUI App (Windows) - Fast Start",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Concert.MAUI/Concert.MAUI.csproj",
                "--framework",
                "net9.0-windows10.0.19041.0",
                "--no-build"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "preLaunchTask": "Build MAUI App"
        },
        {
            "name": "Launch API Server",
            "type": "coreclr", 
            "request": "launch",
            "program": "${workspaceFolder}/Concert.API/bin/Debug/net9.0/Concert.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Concert.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "https://localhost:5001/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch MAUI App (Android)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/Concert.MAUI/bin/Debug/net9.0-android/Concert.MAUI.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Concert.MAUI",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "preLaunchTask": "Build and Deploy MAUI App (Android)",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        }
    ],
    "compounds": [
        {
            "name": "Launch Full App (API + Windows)",
            "configurations": ["Launch API Server", "Launch MAUI App (Windows)"]
        },
        {
            "name": "Launch Full App (API + Android)",
            "configurations": ["Launch API Server", "Launch MAUI App (Android)"]
        }
    ]
}
